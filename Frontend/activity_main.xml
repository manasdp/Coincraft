<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investment Risk Profiling"
        android:textSize="24sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User ID"
        android:layout_below="@id/title"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/portfolioInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Portfolio (comma-separated values)"
        android:layout_below="@id/userIdInput"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/portfolioInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/recommendationOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitButton"
        android:layout_margin="16dp" />

</RelativeLayout>
