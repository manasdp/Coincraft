<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.GraphController">
    <Label text="Spending Patterns" style="-fx-font-size: 24px; -fx-font-weight: bold;" layoutX="150" layoutY="20"/>
    <AreaChart fx:id="spendingChart" layoutX="20" layoutY="50" prefWidth="400" prefHeight="300">
        <XAxis fx:id="xAxis" label="Category"/>
        <YAxis fx:id="yAxis" label="Amount"/>
    </AreaChart>
</AnchorPane>
